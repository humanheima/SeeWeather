<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.humanheima.androideventdispatchdemo.ui.activity.StartActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_start_MyButtonActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="btn_start_MyButtonActivity" />

            <Button
                android:id="@+id/btn_start_MainActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="btn_start_MainActivity" />

            <Button
                android:id="@+id/btn_start_MyLayoutActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="外部拦截move事件" />

            <Button
                android:id="@+id/btn_start_InnerIntercept_Activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="内部拦截move事件" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
